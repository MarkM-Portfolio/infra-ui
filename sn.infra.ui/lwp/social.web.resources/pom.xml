    <modelVersion>4.0.0</modelVersion>
    <groupId>com.ibm.lconn.infra.ui.social.web.resources</groupId>
    <artifactId>social.web.resources</artifactId>
    <name>social.web.resources</name>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>

    <modules>
        <module>eclipse/plugins/com.ibm.ic.as.lconn.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.as.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.ee.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.incontext.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.mail.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.sharebox.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.socgadget.web.resources</module>
        <module>eclipse/plugins/com.ibm.ic.social.web.resources.tests</module>
        <module>eclipse/plugins/com.ibm.lconn.socialmail.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.as.lconn.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.as.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.ee.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.eeconfig.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.gadget.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.hikari.theme</module>
        <module>eclipse/plugins/com.ibm.social.incontext.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.sharebox.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.test.web.resources</module>
        <module>eclipse/plugins/com.ibm.social.ublog.web.resources</module>
    </modules>

    <dependencies>
        <dependency>
            <groupId>com.ibm.lconn.infra.ui.lc.web.resources</groupId>
            <artifactId>com.ibm.lconn.core.web.resources</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.jazz</groupId>
            <artifactId>net.jazz.ajax</artifactId>
            <version>2.2.1000.20150220-0240</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.jazz</groupId>
            <artifactId>net.jazz.ajax.tests</artifactId>
            <version>2.1.0.20150220-0240</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>net.jazz</groupId>
            <artifactId>net.jazz.web.core</artifactId>
            <version>2.1.1000.v20130626_0447</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <archive>
                        <manifestFile>META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>
        </plugins>

        <resources>
            <resource>
                <directory>resources</directory>
                <targetPath>resources</targetPath>
            </resource>
            <resource>
                <directory>${basedir}</directory>
                <includes>
                    <include>plugin.xml</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>