            <annotation>
               <documentation>
                  
               </documentation>
            </annotation>
         </attribute>
         <attribute name="name" type="string">
            <annotation>
               <documentation>
                  
               </documentation>
               <appInfo>
                  <meta.attribute translatable="true"/>
               </appInfo>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="cssBinding">
      <complexType>
         
         <attribute name="bind" type="string">
            <annotation>
               <documentation>
                  The identifier of a CSS extension stylesheet that should be associated with the bound stylesheet.  
                  When the bound stylesheet is loaded, this extension stylesheet will also be loaded. 
               </documentation>
            </annotation>
         </attribute>
         <attribute name="to" type="string">
            <annotation>
               <documentation>
                  The identifier of a CSS stylesheet that, when loaded, will also load the extension stylesheet.
               </documentation>
               <appInfo>
                  <meta.attribute translatable="true"/>
               </appInfo>
            </annotation>
         </attribute>
         
