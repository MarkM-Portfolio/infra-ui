	<servlet>
		<servlet-name>app-login</servlet-name>
		<servlet-class>com.ibm.lconn.core.web.auth.LoginServlet</servlet-class>
		<init-param><param-name>service.name</param-name><param-value>deploymentConfig</param-value></init-param>
		<init-param><param-name>cookie.name</param-name><param-value>WASReqURL</param-value></init-param>
